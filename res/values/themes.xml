<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="NotepadBarTheme"
           parent="@style/Theme.AppCompat.Light">
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/NotepadActionBar</item>
        <item name="actionBarTabTextStyle">@style/NotepadActionBarTabText</item>
        <item name="actionMenuTextColor">@color/note_text</item>
    </style>

    <!-- ActionBar styles -->
    <style name="NotepadActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Support library compatibility -->
        <item name="background">@color/note_page</item>
        <item name="titleTextStyle">@style/NotepadBarTitleText</item>
    </style>
    
     <!-- ActionBar title text -->
    <style name="NotepadBarTitleText"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/note_text</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>
    
    <!-- ActionBar tabs text -->
    <style name="NotepadActionBarTabText"
           parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/note_text</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>
</resources>